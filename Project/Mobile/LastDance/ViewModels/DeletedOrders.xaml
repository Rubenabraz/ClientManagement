<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LastDance.ViewModels.DeletedOrders" Title="Pedidos Removidos" BackgroundColor="White">

    <VerticalStackLayout Padding="15" Spacing="15">

        <!-- Lista de pedidos removidos -->
        
        <CollectionView  x:Name="DeletedOrdersListView" SelectionMode="Single">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" Margin="5" BorderColor="#ddd" CornerRadius="12" HasShadow="True" BackgroundColor="#fafafa">

                        <VerticalStackLayout Spacing="8">

                            <HorizontalStackLayout Spacing="5">
                                
                                <Label Text="Nome do Cliente:" FontAttributes="Bold" FontSize="16" TextColor="#222" />
                                
                                <Label Text="{Binding ClientName}" FontSize="16" TextColor="#333" />
                                
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="5">
                                
                                <Label Text="Nome:" FontAttributes="Bold" FontSize="16" TextColor="#222" />
                                
                                <Label Text="{Binding ordName}" FontSize="16" TextColor="#333" />
                                
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="5">
                                
                                <Label Text="Descrição:" FontAttributes="Bold" FontSize="14" TextColor="#555" />
                                
                                <Label Text="{Binding ordDescription}" FontSize="14" TextColor="#666" />
                                
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="5">
                                
                                <Label Text="Removido por:" FontAttributes="Bold" FontSize="14" TextColor="#555" />
                                
                                <Label Text="{Binding ordUpdatedUser}" FontSize="14" TextColor="#666" />
                                
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="5">
                                
                                <Label Text="Data de exclusão:" FontAttributes="Bold" FontSize="14" TextColor="#555" />
                                
                                <Label Text="{Binding ordUpdatedDate, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontSize="14" TextColor="#666" />
                                
                            </HorizontalStackLayout>

                            <Label Text="(Pedido apagado)" FontSize="12" TextColor="Red" FontAttributes="Italic" HorizontalOptions="End" />

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
