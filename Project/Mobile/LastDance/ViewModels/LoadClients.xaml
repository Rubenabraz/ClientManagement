<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LastDance.ViewModels.LoadClients" Title="Clientes" BackgroundColor="White">

    <!-- Toolbar com os 3 pontos -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Criar Cliente" Clicked="ClientInsert" Order="Secondary"/>
        <ToolbarItem Text="Clientes Removidos" Clicked="DeletedClients" Order="Secondary"/>
        <ToolbarItem Text="Procurar por ID" Clicked="FindByID" Order="Secondary"/>
        <ToolbarItem Text="Ver Encomedas" Clicked= "OrdersList" Order="Secondary"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">

            <CollectionView  x:Name="ClientsListView" ItemsSource="{Binding Clients}" SelectionMode="None"  HeightRequest="900">

                <!-- evita ocupar toda a página -->

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" Margin="5" BorderColor="#ddd" CornerRadius="12" HasShadow="True" BackgroundColor="#fafafa">

                            <VerticalStackLayout Spacing="10">

                                <!-- Nome -->

                                <HorizontalStackLayout Spacing="8">
                                    
                                    <Label Text="Nome:" FontAttributes="Bold" FontSize="16" TextColor="#222"/>
                                    
                                    <Label Text="{Binding cltFullName}" FontSize="16" TextColor="#333"/>
                                    
                                </HorizontalStackLayout>

                                <!-- Email -->

                                <HorizontalStackLayout Spacing="8">
                                    
                                    <Label Text="Email:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                                    
                                    <Label Text="{Binding cltEmail}" FontSize="14" TextColor="#666"/>
                                    
                                </HorizontalStackLayout>

                                <!-- Telefone -->

                                <HorizontalStackLayout Spacing="8">
                                    
                                    <Label Text="Telefone:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                                    
                                    <Label Text="{Binding cltPhoneNumber}" FontSize="14" TextColor="#666"/>
                                    
                                </HorizontalStackLayout>

                                <!-- Gênero -->

                                <HorizontalStackLayout Spacing="8">
                                    
                                    <Label Text="Gênero:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                                    
                                    <Label Text="{Binding cltGender}" FontSize="14" TextColor="#666"/>
                                    
                                </HorizontalStackLayout>

                                <!-- Criado por -->

                                <HorizontalStackLayout Spacing="8">
                                    
                                    <Label Text="Criado por:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                                    
                                    <Label Text="{Binding cltCreatedUser}" FontSize="14" TextColor="#666"/>
                                    
                                </HorizontalStackLayout>

                                <!-- Data de criação -->

                                <HorizontalStackLayout Spacing="8">
                                    
                                    <Label Text="Data de criação:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                                    
                                    <Label Text="{Binding cltCreatedDate}" FontSize="14" TextColor="#666"/>
                                    
                                </HorizontalStackLayout>

                                <!-- Atualizar Cliente -->

                                <Label Text="Atualizar Cliente" FontSize="16" TextColor="#007AFF" HorizontalOptions="Center" TextDecorations="Underline" Margin="0,10,0,0">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ClientUpdate" NumberOfTapsRequired="1"/>
                                    </Label.GestureRecognizers>
                                </Label>
                                
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
