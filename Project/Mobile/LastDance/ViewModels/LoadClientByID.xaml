<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LastDance.ViewModels.LoadClientByID" Title="Consultar Cliente por ID" BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Título -->
            
            <Label Text="Consultar Cliente" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#222" />

            <!-- Cliente ID + Botão -->
            
            <Frame Padding="10" BorderColor="#ddd" CornerRadius="12" BackgroundColor="#fafafa">
                
                <VerticalStackLayout Spacing="5">
                    
                    <Label Text="ID do Cliente" FontSize="16" FontAttributes="Bold" TextColor="#444"/>

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        
                        <!-- Entry expande -->
                        
                        <Entry x:Name="clientIdEntry" Placeholder="Digite o ID do cliente" Keyboard="Numeric" FontSize="16" BackgroundColor="White" HeightRequest="45" Grid.Column="0"/>

                        <!-- Botão à direita -->
                        
                        <Button Text="🔍" WidthRequest="50" HeightRequest="45" BackgroundColor="#007AFF" CornerRadius="8" TextColor="White" FontAttributes="Bold" Grid.Column="1" Clicked="GetClientById"/>
                        
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Detalhes do Cliente -->
            
            <Frame Padding="15" CornerRadius="12" BorderColor="#ddd" BackgroundColor="#fafafa" HasShadow="True">
                
                <VerticalStackLayout Spacing="12">

                    <!-- Nome -->
                    
                    <HorizontalStackLayout Spacing="6">
                        
                        <Label Text="Nome:"  FontAttributes="Bold" FontSize="16" TextColor="#222"/>
                        
                        <Label Text="{Binding cltFullName}"  FontSize="16" TextColor="#333"/>
                        
                    </HorizontalStackLayout>

                    <!-- Email -->
                    
                    <HorizontalStackLayout Spacing="6">
                        
                        <Label Text="Email:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                        
                        <Label Text="{Binding cltEmail}" FontSize="14" TextColor="#666"/>
                        
                    </HorizontalStackLayout>

                    <!-- Status -->
                    
                    <HorizontalStackLayout Spacing="6">
                        
                        <Label Text="Status:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                        
                        <Label Text="{Binding cltStatus}" FontSize="14" TextColor="#666"/>
                        
                    </HorizontalStackLayout>

                    <!-- Numero de telefone -->
                    
                    <HorizontalStackLayout Spacing="6">
                        
                        <Label Text="Numero de telefone:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                        
                        <Label Text="{Binding cltPhoneNumber}" FontSize="14" TextColor="#666"/>
                        
                    </HorizontalStackLayout>

                    <!-- Genero -->
                    
                    <HorizontalStackLayout Spacing="6">
                        
                        <Label Text="Genero:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                        
                        <Label Text="{Binding cltGender}" FontSize="14" TextColor="#666"/>
                        
                    </HorizontalStackLayout>

                    <!-- Criado por -->
                    
                    <HorizontalStackLayout Spacing="6">
                        
                        <Label Text="Criado por:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                        
                        <Label Text="{Binding cltCreatedUser}" FontSize="14" TextColor="#666"/>
                        
                    </HorizontalStackLayout>

                    <!-- Data de criacao -->
                    
                    <HorizontalStackLayout Spacing="6">
                        
                        <Label Text="Data de criação:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                        
                        <Label Text="{Binding cltCreatedDate, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontSize="14" TextColor="#666"/>
                        
                    </HorizontalStackLayout>

                    <!-- Atualizado por -->
                    
                    <HorizontalStackLayout Spacing="6">
                        
                        <Label Text="Atualizado por:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                        
                        <Label Text="{Binding cltUpdatedUser}" FontSize="14" TextColor="#666"/>
                        
                    </HorizontalStackLayout>

                    <!-- Data da última atualização -->
                    
                    <HorizontalStackLayout Spacing="6">
                        
                        <Label Text="Data da última atualização:" FontAttributes="Bold" FontSize="14" TextColor="#555"/>
                        
                        <Label Text="{Binding cltUpdatedDate, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontSize="14" TextColor="#666"/>
                        
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
